<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="il.ac.pddailycogresearch.pddailycog.fragments.TakePictureFragment">

    <ImageView
        android:id="@+id/imageViewTakePictureFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        style="@style/StyleButton"
        android:id="@+id/buttonTakePictureFragment"
        android:layout_width="wrap_content"
        android:layout_below="@id/imageViewTakePictureFragment"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/take_picture" />
</RelativeLayout>
