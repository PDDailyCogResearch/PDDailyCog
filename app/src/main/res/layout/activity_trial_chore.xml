<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    tools:context="il.ac.pddailycogresearch.pddailycog.activities.TrialChoreActivity">

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/relativeLayoutUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button style="@style/StyleButton"
            android:id="@+id/buttonTrialChoreInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/instructions" />

        <Button style="@style/StyleButton"
            android:id="@+id/buttonTrialChoreExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/exit"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"             />

    </RelativeLayout>

    <FrameLayout
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayoutTrialFragmentContainer"
        android:layout_below="@id/relativeLayoutUp"
        android:layout_above="@+id/relativeLayoutButtom">


    </FrameLayout>
<RelativeLayout
    android:id="@+id/relativeLayoutButtom"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button style="@style/StyleButton"
        android:id="@+id/buttonTrialChoreOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/ok" />
</RelativeLayout>
</RelativeLayout>


